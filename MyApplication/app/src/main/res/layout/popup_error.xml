<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="250dp"
        android:layout_height="176dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="239dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgIconDialog"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/error_icon"></ImageView>

            <TextView
                android:id="@+id/tvContent1"
                android:layout_width="187dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Attendance Fail"
                android:textAlignment="center">

            </TextView>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Please try again!"
                android:textAlignment="center">
            </TextView>

            <Button
                android:id="@+id/btnOKError"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#F44336"
                android:text="OK"
                app:backgroundTint="#0174B3"></Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>